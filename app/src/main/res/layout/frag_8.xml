<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cac">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/layout_1">


        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Which is your favourite Concert "
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_fetch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" \?"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/layout_2"
        android:layout_below="@id/layout_1"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/q8b1"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Arijit Singh"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_alignBaseline="@+id/q8b2"
            android:layout_alignBottom="@+id/q8b2"
            android:layout_toLeftOf="@+id/q8b2"
            android:layout_toStartOf="@+id/q8b2" />

        <Button
            android:id="@+id/q8b2"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Shreya Ghosal"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/q8b3"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Shrely Setia"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/q8b1"
            android:layout_alignStart="@+id/q8b1" />

        <Button
            android:id="@+id/q8b4"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Sonu Nigam"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_alignBaseline="@+id/q8b3"
            android:layout_alignBottom="@+id/q8b3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</RelativeLayout>